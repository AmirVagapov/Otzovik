<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="4dp"
    android:layout_marginBottom="8dp"
    android:background="@color/titleBackground"
    android:id="@+id/list_item_card_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/list_item_image_view"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@color/cardview_dark_background"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_add_to_favorite"
            android:layout_below="@id/list_item_image_view"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_favorite_black_24dp"
            android:background="@color/color_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            tools:text="jiskcs,dcsdcsgs"
            android:layout_toRightOf="@id/list_item_image_view"
            android:textStyle="bold"
            android:id="@+id/list_item_title_text_view"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:background="@color/colorBackground"
            android:layout_below="@id/list_item_title_text_view"
            android:layout_toRightOf="@id/list_item_image_view"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_adress_text_view"
            android:layout_toRightOf="@id/list_item_image_view"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            tools:text="fsijfksldsdfs"
            android:textSize="14sp"
            android:layout_below="@id/list_item_title_text_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:background="@color/colorBackground"
            android:layout_below="@id/list_item_adress_text_view"
            android:layout_toRightOf="@id/list_item_image_view"/>

        <TextView
            android:id="@+id/list_item_place_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_item_image_view"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            tools:text="ty6ujhfgg"
            android:textSize="14sp"
            android:layout_below="@id/list_item_adress_text_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:background="@color/colorBackground"
            android:layout_below="@id/list_item_place_type"
            android:layout_toRightOf="@id/list_item_image_view"/>

        <RatingBar
            android:id="@+id/list_item_rating_bar"
            android:layout_below="@id/list_item_place_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/list_item_image_view"
            style="@style/Widget.AppCompat.RatingBar.Indicator"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:background="@color/colorBackground"
            android:layout_below="@id/list_item_rating_bar"
            android:layout_toRightOf="@id/list_item_image_view"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>